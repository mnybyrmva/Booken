@model List<Book>
@{
    int count = 0;
}
@section Css{
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.2/sweetalert2.min.css" integrity="sha512-NvuRGlPf6cHpxQqBGnPe7fPoACpyrjhlSNeXVUY7BZAj1nNhuNpRBq3osC4yr2vswUEuHq2HtCsY2vfLNCndYA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<div class="container">
    <div class="d-flex" style="justify-content: space-around; align-items:center">
        <h1>Books</h1>
        <th><a asp-controller="Book" asp-action="Create" class="btn btn-primary">Create</a></th>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">CostPrice</th>
                <th scope="col">SalePrice</th>
                <th scope="col">BookCode</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book book in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@book.Name</td>
                    <td>@book.CostPrice</td>
                    <td>@book.SalePrice</td>
                    <td>@book.BookCode</td>
                    <td>
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-info">Edit</a>
                        <a asp-controller="Book" asp-action="HardDelete" asp-route-id="@book.Id" class="btn btn-danger delete-button">HardDelete</a>
                        <a asp-controller="Book" asp-action="SoftDelete" asp-route-id="@book.Id" class="btn btn-danger ">SoftDelete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    @section Scripts{
        <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.2/sweetalert2.min.js" integrity="sha512-jSNGQoIZ0qago6DK45skZbDI1JC8bmANSwItgDnMXiAnJm0Lq6QB4yXY8QPKqS68iR3ngZi0pM5+wZvg1kCCKQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    }