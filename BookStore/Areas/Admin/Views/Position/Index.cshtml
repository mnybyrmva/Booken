@model List<Position>
@{
    int count = 0;
}
@section Css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.2/sweetalert2.min.css" integrity="sha512-NvuRGlPf6cHpxQqBGnPe7fPoACpyrjhlSNeXVUY7BZAj1nNhuNpRBq3osC4yr2vswUEuHq2HtCsY2vfLNCndYA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<div class="container">
    <div>
        <h1>Position:</h1>
        <a asp-action="create" asp-controller="Position" class="btn btn-primary">Create</a>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Position position in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@position.Id</td>
                        <td>@position.Name</td>
                        <td>
                            <a asp-action="Update" asp-controller="Position" asp-route-id="@position.Id" class="btn btn-primary">Update</a>
                            <a asp-action="HardDelete" asp-controller="Position" asp-route-id="@position.Id" class="btn btn-danger delete-button">HardDelete</a>
                            <a asp-action="SoftDelete" asp-controller="Position" asp-route-id="@position.Id" class="btn btn-danger ">SoftDelete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
            <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.2/sweetalert2.min.js" integrity="sha512-jSNGQoIZ0qago6DK45skZbDI1JC8bmANSwItgDnMXiAnJm0Lq6QB4yXY8QPKqS68iR3ngZi0pM5+wZvg1kCCKQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    }