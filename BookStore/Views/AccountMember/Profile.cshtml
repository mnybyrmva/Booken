@model List<Order>

@{
    ViewData["Title"] = "Profile";
    int count = 0;
}
@section css{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
}
<div class="container" style="min-height:50vh">
    <h1>Orders:</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">OrderId</th>
                <th scope="col">Fullname</th>
                <th scope="col">OrderStatus</th>
                <th scope="col">TotalPrice</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@order.Id</td>
                    <td>@order.FullName</td>
                    <td>
                        <span style="font-size: 15px;padding: 9px 16px;" class="badge text-bg-@(order.OrderStatus == BookStore.Enums.OrderStatus.Pending ? "secondary"
: (order.OrderStatus == BookStore.Enums.OrderStatus.Accepted ? "success"
: "danger"))">@order.OrderStatus</span>
                    </td>
                    <td>@order.TotalPrice.ToString("0.00")</td>
                    <td><a asp-controller="AccountMember" asp-action="Detail" asp-route-id="@order.Id" class="btn btn-info text-white">Details</a></td>

                </tr>
            }

        </tbody>
    </table>
</div>